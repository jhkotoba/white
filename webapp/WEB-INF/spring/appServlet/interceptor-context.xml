<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
 
	<!-- 세션체크 Interceptor -->
	<mvc:interceptors> 
	    <mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/resources/**" />
			
	      	<!-- 공개 -->
			<mvc:exclude-mapping path="/"/>
			<mvc:exclude-mapping path="/main"/> 
			
			<!-- 로그인  -->
			<mvc:exclude-mapping path="/main/login"/>
			<mvc:exclude-mapping path="/main/logout"/>
			
			<!-- <mvc:exclude-mapping path="/login/login.do"/>
			<mvc:exclude-mapping path="/login/loginProcess.do"/>
			<mvc:exclude-mapping path="/login/logoutProcess.do"/>
			 -->
	               
	     	<!-- 회원가입 -->
	     	<mvc:exclude-mapping path="/main/join"/>
	     	<!-- 임시  -->
	     	<mvc:exclude-mapping path="/login/signUp.do"/>
			<mvc:exclude-mapping path="/login/insertSignUp.do"/>
			<mvc:exclude-mapping path="/login/userIdCheck.ajax"/>
				
			<beans:bean id="sessionInterceptor"
			  class="com.ljh.white.common.utility.interceptor.SessionInterceptor"></beans:bean>
		</mvc:interceptor> 
	</mvc:interceptors>
	
	<!-- 기기구분 Interceptor -->
	<mvc:interceptors> 
	    <mvc:interceptor>
			<mvc:mapping path="/**" />			
			<beans:bean class="org.springframework.mobile.device.DeviceResolverHandlerInterceptor"></beans:bean>
		</mvc:interceptor> 
	</mvc:interceptors>	
	<mvc:annotation-driven>
    	<mvc:argument-resolvers>
        	<beans:bean class="org.springframework.mobile.device.DeviceWebArgumentResolver"></beans:bean>
    	</mvc:argument-resolvers>
	</mvc:annotation-driven>	
	
</beans:beans>